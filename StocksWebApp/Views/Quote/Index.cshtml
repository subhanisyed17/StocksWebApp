@{
	ViewData["Title"] = "CompanyQuote";
}
@{
	Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <style type="text/css">
        body {
            font-family: Arial;
            font-size: 10pt;
        }
    </style>
</head>
<body>
    <div>
        <p>
            For knowing the latest quote of the individual company share price please provide the trading symbol of the company. You can find out company's trading symbol <a href="@Url.Action("Companies", "Home")" class="elements"><b><u>here</u></b></a>
