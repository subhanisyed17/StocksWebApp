@model Feedback


<form asp-action="Index" method="post" class="form-horizontal" role="form">

	<div asp-validation-summary="All" class="text-danger"></div>

	<div class="form-group">
		<label asp-for="Name" class="col-md-2 control-label"></label>
		<div class="col-md-5">
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group">
		<label asp-for="FeedbackMessage" class="col-md-2 control-label"></label>
		<div class="col-md-5">
			<textarea asp-for="FeedbackMessage" class="form-control"></textarea>
			<span asp-validation-for="FeedbackMessage" class="text-danger"></span>
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-offset-2 col-md-5">
			<input type="submit" class="btn btn-primary" value="Send feedback" />
		</div>
	</div>

</form>